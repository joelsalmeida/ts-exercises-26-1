{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "lines-between-class-members": "off",
        "@typescript-eslint/lines-between-class-members": [
            "error"
        ]
    },
    "ignorePatterns": [
        "**/*.js"
    ]
}